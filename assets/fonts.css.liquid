@font-face {
  font-family: "Minion Pro Medium Italic Subhead";
  src: url({{ 'Minion-Pro-Italic-Subhead.otf' | asset_url }}) format("opentype");
}

@font-face {
  font-family: "Spline Sans Mono Medium";
  src: url({{ 'SplineSansMono-Medium.ttf' | asset_url }}) format('truetype');
}

.button {
  font-family: "Spline Sans Mono Medium";
  text-transform: uppercase;
  background-color: transparent;
  color: rgba(var(--color-foreground), 0.75);
}